<h2 class="text-center mb-4">Your Orders</h2>

<% if @orders.any? %>
  <div class="container">
    <div class="table-responsive">
      <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark text-center">
          <tr>
            <th>Order #</th>
            <th>Status</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr class="text-center align-middle">
              <td><strong><%= order.id %></strong></td>
              <td>
                <% if order.status == "pending" %>
                  <span class="badge bg-warning text-dark">Pending</span>
                <% elsif order.status == "completed" %>
                  <span class="badge bg-success">Completed</span>
                <% else %>
                  <span class="badge bg-secondary"><%= order.status.capitalize %></span>
                <% end %>
              </td>
              <td class="text-success"><strong><%= number_to_currency(order.total) %></strong></td>
              <td>
                <%= link_to "View Details", order_path(order), class: "btn btn-primary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <p class="text-center text-muted fs-5">You have no orders yet.</p>
<% end %>
