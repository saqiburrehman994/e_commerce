<h2 class='text-center mb-4'>ðŸ“¦ Manage Orders</h2>
<div class='container'>
  <div class='table-responsive'>
    <table class='table table-bordered table-hover'>
      <thead class='table-dark text-center'>
        <tr>
          <th>#</th>
          <th>User</th>
          <th>Total</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each_with_index do | order, index|%>
          <tr class='text-center align-middle'>
            <td><%= index+1 %></td>
            <td><%= order.user.email %></td>
            <td class='text-success'><%= number_to_currency(order.total) %></td>
            <td>
              <span class='badge
                <%= order.pending? ? 'bg-warning text-dark':' '%>
                <%= order.processing? ? 'bg-info':''%>
                <%= order.shipped? ? 'bg-primary':''%>
                <%= order.delivered? ? 'bg-success':''%>
                <%= order.cancelled? ? 'bg-danger':''%>'>
                <%= order.status.humanize %>
              </span>
            </td>
            <td>
              <%= form_with url: update_status_order_path(order), method: :patch do |f|%>
                <%= f.select :status, Order.statuses.keys.map{ |s| [s.humanize, s]}, class:'form-select d-inline-block w-auto'%>
                <%= f.submit 'Update', class: 'btn btn-sm btn-primary ms-2'%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>