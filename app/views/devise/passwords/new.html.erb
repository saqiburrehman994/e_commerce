
<div class='container d-flex justify-content-center align-items-center vh-100'>
  <div class='card shadow-sm p-4'>
    <h2 class='text-center mb-4'>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class='mb-4'>
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control',placeholder:'Enter your email'%>
      </div>

      <div class='d-grid mb-4'>
        <%= f.submit 'Send me reset password instructions', class:'btn btn-primary rounded'%>
      </div>
    <% end %>
    <div class='text-center'>
    <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>